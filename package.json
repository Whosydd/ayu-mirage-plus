{
  "name": "ayu-mirage-plus",
  "displayName": "Ayu Mirage Plus",
  "description": "This theme is basic on Ayu Mirage, just for fun! :)",
  "version": "1.0.2",
  "publisher": "GY",
  "repository": {
    "type": "git",
    "url": "https://github.com/Whosydd/ayu-mirage-plus"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "ayu"
  ],
  "icon": "src/assets/logo.png",
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:addTheme",
    "onCommand:resetTheme",
    "onCommand:delTheme"
  ],
  "contributes": {
    "commands": [
      {
        "title": "add theme",
        "command": "addTheme",
        "category": "ayu-mirage-plus"
      },
      {
        "title": "reset theme",
        "command": "resetTheme",
        "category": "ayu-mirage-plus"
      },
      {
        "title": "remove theme",
        "command": "delTheme",
        "category": "ayu-mirage-plus"
      }
    ],
    "themes": [
      {
        "label": "Ayu Mirage Plus",
        "uiTheme": "vs-dark",
        "path": "src/themes/theme.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Add Theme",
      "properties": {
        "ayu-mirage-plus.addTheme": {
          "type": "array",
          "default": [
            {
              "name": "",
              "themeColor": "#bbffaa",
              "foreground": "#000000",
              "border": "#bbffaa34",
              "highlight": "#8cf173"
            }
          ],
          "description": "Change the theme color you want.",
          "scope": "resource"
        },
        "ayu-mirage-plus.resetTheme": {
          "type": "array",
          "default": [
            {
              "name": "",
              "themeColor": "#bbffaa",
              "foreground": "#000000",
              "border": "#bbffaa34",
              "highlight": "#8cf173"
            }
          ],
          "description": "Change the theme color you want.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.46.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
